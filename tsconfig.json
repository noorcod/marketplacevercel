{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "baseUrl": ".",
    "paths": {
      "@/*": ["../*"],
      "@/public/*": ["../public/*"]

    },
//   "include": [
//     "next-env.d.ts",
//     "**/*.ts",
//     "**/*.tsx"
// , "src"  ],
"include": [
    "next-env.d.ts",
    "pages/**/*",
    "src/**/*",
],
  "exclude": [
    "node_modules"
  ]
}
